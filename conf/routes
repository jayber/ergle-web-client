# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET         /        @controllers.MainController.index(owner="")
GET         /login        @controllers.MainController.showLogin
GET         /:owner        @controllers.MainController.index(owner)
POST        /login        @controllers.MainController.login

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file        controllers.Assets.at(path="/public", file)

GET         /virtualcss.js/*csspath        virtualcss.VirtualCssController.virtualCssJs(csspath)
GET         /virtualcss.css/*csspath        virtualcss.VirtualCssController.virtualCss(csspath)
